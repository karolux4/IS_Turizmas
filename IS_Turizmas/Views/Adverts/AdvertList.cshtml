@model List<IS_Turizmas.Models.Reklamos>
@{
    ViewData["Title"] = "Adverts";
    <div class="col-md-10 mx-auto text-center py-3 my-3">
        <h1>Mano reklamos</h1>
    </div>
    <div class="col-md-10 mx-auto">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Pavadinimas</th>
                    <th scope="col">Veiksmai</th>
                </tr>
                <div class="col-md-10 mx-auto">
                    <div class="row">
                        <div class="col-md-4">
                            <a asp-action="CreateAdvert">Kurti reklamą</a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="CreateAdvertPlan">Kurti plana</a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="DeleteAdvertPlan">Mano planai</a>
                        </div>
                    </div>
                </div>
                @for (var i = 0; i < Model.Count; i++)
                {
            <tr>
                <td>@Html.DisplayFor(model => Model[i].Id)</td>
                <td>@Html.DisplayFor(model => Model[i].Pavadinimas)</td>
                <td><a asp-action="ViewAdvertStatistics" asp-route-id="@Model[i].Id">Reklamos statistika</a> | <a asp-action="EditAdvert" asp-route-id="@Model[i].Id">Redaguoti reklama</a> | <a asp-action="Index" data-toggle="modal" data-target="#deleteConfirmation" asp-route-id="@Model[i].Id">Šalinti</a></td>
            </tr>
                }
            </thead>
        </table>
    </div>


    <!--Delete confirmation window-->
    <div class="modal fade" id="deleteConfirmation" tabindex="-1" role="dialog" aria-labelledby="Delete confirmation window" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmation">Šalinimo patvirtinimas</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Ar tikrai norite ištrinti reklamą?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Šalinti</button>
                </div>
            </div>
        </div>
    </div>
}
